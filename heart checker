           <script>
const form = document.getElementById('riskForm');
const resultDiv = document.getElementById('result');
const badge = document.getElementById('badge');
const advice = document.getElementById('advice');
const fillbar = document.getElementById('fillbar');

form.addEventListener('submit', function(e) {
  e.preventDefault();

  // Get values (IDs exactly as in HTML)
  const age = parseInt(document.getElementById('age').value);
  const sex = document.getElementById('Sex').value;
  const family = document.getElementById('familyHistory').value;
  const exercise = document.getElementById('exercise').value;
  const bp = document.getElementById('bp').value;
  const chol = document.getElementById('chol').value;
  const diet = document.getElementById('diet').value;
  const fats = document.getElementById('fats').value;
  const smoking = document.getElementById('smoking').value;
  const alcohol = document.getElementById('alcohol').value;
  const stress = document.getElementById('stress').value;
  const sleep = document.getElementById('sleep').value;
  const kidney = document.getElementById('kidney').value;
  const diabetes = document.getElementById('diabetes').value;

  // Scoring functions
  function agePoints(v) {
    if(v < 35) return 0;
    else if (v < 50) return 2;
    else return 4;
  }
  function sexPoints(v) {
    return v === 'm' ? 2 : 1;
  }
  function familyPoints(v) {
    if (v === 'D') return 0;
    if (v === 'C') return 3;
    if (v === 'A' || v === 'B') return 2;
    return 0;
  }
  function exercisePoints(v) {
    return v === 'Daily' ? 0 : v === 'Sometimes' ? 1 : 2;
  }
  function dietPoints(v) {
    return v === 'Daily' ? 0 : v === 'Sometimes' ? 1 : v === 'Rarely' ? 2 : 3;
  }
  function yesNoPoints(v) {
    return v.toLowerCase() === 'yes' ? 3 : 0;
  }
  function alcoholPoints(v) {
    if (v === 'Heavy') return 3;
    if (v === 'Moderate') return 1;
    return 0;
  }
  function stressPoints(v) {
    if (v === 'High') return 3;
    if (v === 'Moderate') return 1;
    return 0;
  }
  function sleepPoints(v) {
    if (v === 'Good') return 0;
    if (v === 'Moderate') return 1;
    return 2;
  }
  function fatsPoints(v) {
    if (v === 'Daily') return 3;
    if (v === 'Sometimes') return 2;
    if (v === 'Rarely') return 1;
    return 0;
  }

  // Calculate total score
  const total = 
    agePoints(age) +
    sexPoints(sex) +
    familyPoints(family) +
    exercisePoints(exercise) +
    yesNoPoints(bp) +
    yesNoPoints(chol) +
    yesNoPoints(diabetes) +
    yesNoPoints(kidney) +
    dietPoints(diet) +
    fatsPoints(fats) +
    yesNoPoints(smoking) +
    alcoholPoints(alcohol) +
    stressPoints(stress) +
    sleepPoints(sleep);

  
  let level = '';
  if (total <= 10) level = 'Low';
  else if (total <= 20) level = 'Medium';
  else level = 'High';

  
  badge.textContent = `${level} Risk`;
  badge.className = `riskbadge ${level.toLowerCase()}`;

  
  fillbar.style.width = `${(total / 30) * 100}%`;
  fillbar.style.background = level === 'Low' ? '#590D22' : level === 'Medium' ? '#F46075' : '#D72638';

  
  let message =
    level === 'Low'
      ? 'Your risk is low. Keep maintaining your healthy lifestyle!'
      : level === 'Medium'
        ? 'Your risk is medium. Consider consulting a healthcare professional for advice.'
        : 'Your risk is high. Please consult with a healthcare professional soon.';

  let tips = [];
  if (exercise !== 'Daily') tips.push("Try to get at least 30 minutes of physical activity most days.");
  if (diet !== 'Daily') tips.push("Add more fruits and vegetables to your diet.");
  if (smoking === 'Yes') tips.push("Consider quitting tobacco to lower your risk.");
  if (bp === 'Yes') tips.push("Work with your healthcare provider to manage your blood pressure.");
  if (chol === 'Yes') tips.push("Focus on healthy fats to help lower cholesterol.");
  if (stress !== 'Low') tips.push("Take steps to manage your stress: try relaxation, regular sleep, or mindfulness techniques.");
  if (alcohol === 'Heavy') tips.push("Consider reducing your alcohol use. Heavy drinking can damage your heart.");
  else if (alcohol === 'Moderate') tips.push("Keep your alcohol intake moderate and never binge drink.");

  const tipsHTML = tips.length
    ? `<div style='margin-top:.9em;text-align:left'><strong>Tips for you:</strong><ul>${tips.map(t => `<li>${t}</li>`).join('')}</ul></div>`
    : "";

  advice.innerHTML = `<p>${message}</p>` + tipsHTML;

  
  form.classList.add('hidden');
  resultDiv.classList.remove('hidden');
});


function resetform() {
  form.reset();
  resultDiv.classList.add('hidden');
  form.classList.remove('hidden');
  fillbar.style.width = '0%';
}

        </script>
    </body>
 </html>   
